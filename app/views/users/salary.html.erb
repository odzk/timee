<% provide(:title, "salary") %>
<div class="container">
 
 <h3>Salary</h3>
 <br>
 <a href="/flows" class="btn btn-success">All History</a>
 
 <br>
  <div class="col-md-6 box1">
   
   
    <%= form_for(@salary) do |f| %>
      <%= render 'shared/error_message', object: f.object %>

     <p>ユーザー番号user-id</p>
      <%#= f.label :email %>
     <b style="color:red;">*</b>
      <%= f.text_field :before_price, class: 'form-control' %>
  <br>
  
    <p>メモmemo</p>
     <b style="color:red;">*</b>
      <%#= f.label :password_confirmation, "Confirmation" %>
      <%= f.text_field :memo, class: 'form-control' %>
<!-- -- --> 
  <br>

      <%= f.submit "振込ました Submit", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>









<table class="table table-bordered table-hover" style="margin:100px 10% 0 10% ; width:80%;">

<thead>
  <th class="col-md-1">ID</th>
  <th class="col-md-2">名前(name)</th>
  <th class="col-md-2">所持時間(time)</th>
  <th class="col-md-2">Total Cost</th>

</thead>

<tbody>
<%= @cost = 0 %>
<% @users.each do |user| %>
<% @cost = @cost + user.time %>
<tr>
  <td><%= user.id %></td>
  <td><%= user.name %></td>
  <td><%= user.time %> min</td>
  <td>Php <%= user.time * 2.5 %></td>

</tr>

<% end %>


<tr>
    <td colspan="3" style="text-align: right; font-weight: bold">Overall Cost</td>
    <td>Php <%= @cost * 2.5 %></td>
</tr>

</tbody>

  
</table>