<style>

@media only screen and (max-width: 600px) {

.pleft {
  padding-left: 10px !important;
  }

.mmobile {
  margin-top: 30px;
}

 .nopadding {
  padding: 0;
  margin-top: 0 !important;

 }

 .main-center {
  padding: 10px 10px !important;
 }
