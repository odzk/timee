      <tbody>

  <% @safes.each do |safe| %>

          <td><%= safe.id %></td>
          <td><%= safe.created_at %></td>
          <td><%= safe.student %></td>
          <% @p = "\"" + safe.student + "\"" %>
          <% @id = User.find_by(name: safe.student) %>
          <td>
              <% if @id.time.nil? %>
              0mins
              <% else %>
              <%= @id.time %>mins
              <% end %>
  
          </td>
          
          
          <td>
          <%= link_to edit_safe_path(safe), :class => "btn btn-primary" do %>
          <span style="color:#fff;"><i class="fa fa-pencil-square-o"></i><div class="hidden-xs">Application for Complete</div></span>
          <% end %>
          </td>
          
   
        </tr>
  <% end %>
  </tbody>
</table>
