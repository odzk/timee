        <h5 class="text-right">新規会員登録</h5>
        <%= form_for(@user) do |f| %>
            
            <div class="form-group">
              <label for="name" class="cols-md-2 control-label">ニックネーム</label>
              <div class="cols-md-10">
                <div class="input-group">
                  <span class="input-group-addon hidden-xs"><i class="fa fa-user fa" style="color:#948c8c" aria-hidden="true"></i></span>
                   <%= f.text_field :name, class: 'form-control', :placeholder => 'ニックネーム', :required => '' %>
                </div>
              </div>
            </div>

            <div class="form-group">
              <label for="email" class="cols-md-2 control-label">メールアドレス</label>
              <div class="cols-md-10">
                <div class="input-group">
                  <span class="input-group-addon hidden-xs"><i class="fa fa-envelope fa" style="color:#948c8c" aria-hidden="true"></i></span>
                  <%= f.email_field :email, class: 'form-control', :placeholder => 'メールアドレス', :required => '' %>
                </div>
              </div>
            </div>

            <div class="form-group">
              <label for="username" class="cols-md-2 control-label">スカイプID</label>
              <div class="cols-md-10">
                <div class="input-group">
                  <span class="input-group-addon hidden-xs"><i class="fa fa-skype" style="color:#948c8c" aria-hidden="true"></i></span>
                  <%= f.text_field :skype, class: 'form-control', :placeholder => 'スカイプID', :required => ''  %>
                </div>
              </div>
            </div>

            <div class="form-group">
              <label for="password" class="cols-md-2 control-label">パスワード</label>
              <div class="cols-md-10">
                <div class="input-group">
                  <span class="input-group-addon hidden-xs"><i class="fa fa-lock fa-lg" style="color:#948c8c" aria-hidden="true"></i></span>
                   <%= f.password_field :password, class: 'form-control', :placeholder => 'パスワード', :required => ''  %>
                </div>
              </div>
            </div>

            <div class="form-group">
              <label for="confirm" class="cols-md-2 control-label">確認用パスワード</label>
              <div class="cols-md-10">
                <div class="input-group">
                  <span class="input-group-addon hidden-xs"><i class="fa fa-lock fa-lg" style="color:#948c8c" aria-hidden="true"></i></span>
                  <%= f.password_field :password_confirmation, class: 'form-control', :placeholder => '確認用パスワード', :required => '' %>
                </div>
              </div>
            </div>

            <div class="form-group">
              <div class="cols-md-12">

                  <div class="checkbox">
                  <label><input type="checkbox" value="agree" name="agreement" required autofocus>私は <a href="#" style="color: blue;" data-toggle="modal" data-target="#agreement">利用規約</a> を理解し、同意します。</label>
                    
                  </div>

            </div>

            <%= f.hidden_field :time, :value => 30 %>
            <%= f.hidden_field :type_user, :value => "student" %>

            <div class="form-group">
            <%= f.submit "登録する", class: "btn btn-primary btn-block btn-lg", name: "new", :value => "登録する" %>
            </div>
            
          </form>
