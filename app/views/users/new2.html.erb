<div class="bg nopadding">
    <div class="container nopadding">
      <div class="row main">
        <div class="col-md-12">
        <div class="main-login main-center col-md-offset-3 col-md-6 nopadding">
        <a href="/">
        <img src="../../timee-logo.jpg" class="img img-responsive" style="width: 100px; float: left;margin-top: 35px; margin-bottom: 10px; "> </a>
        <h4 class="text-right text-center">Register as a Teacher</h4> 
        <%= form_for(@user) do |f| %>
          <%= render 'shared/error_message', object: f.object %>
            <div class="form-group">
              <label for="user_name" class="hidden-xs">Name <small style="color: red">[required]</small></label>
                <div class="input-group">
                  <span class="input-group-addon hidden-xs"><i class="fa fa-user" style="color:#948c8c" aria-hidden="true"></i></span>
                  <%= f.text_field :name, class: 'form-control', :placeholder => 'Name', required: '' %>
                </div>
            </div>

            <div class="form-group">
              <label for="user_name" class="hidden-xs">Nickname <small style="color: red">[required]</small></label>
                <div class="input-group">
                  <span class="input-group-addon hidden-xs"><i class="fa fa-id-card" style="color:#948c8c" aria-hidden="true"></i></span>
                  <%= f.text_field :nick, class: 'form-control', :placeholder => 'Nickname', required: '' %>
                </div>
            </div>            

            <div class="form-group">
              <label for="user_email" class="hidden-xs">Mail <small style="color: red">[required]</small></label>
                <div class="input-group">
                  <span class="input-group-addon hidden-xs"><i class="fa fa-envelope fa" style="color:#948c8c" aria-hidden="true"></i></span>
                  <%= f.email_field :email, class: 'form-control', :placeholder => 'E-Mail', required: '' %>
                </div>
            </div>

            <div class="form-group">
              <label for="user_password" class="hidden-xs">Password <small style="color: red">[required]</small></label>
                <div class="input-group">
                  <span class="input-group-addon hidden-xs"><i class="fa fa-lock fa-lg" style="color:#948c8c" aria-hidden="true"></i></span>
                   <%= f.password_field :password, class: 'form-control', :placeholder => 'Password', required: '' %>
                </div>
            </div>

            <div class="form-group">
              <label for="user_passsword_confirmation" class="hidden-xs">Confirm Password <small style="color: red">[required]</small></label>
              <div class="input-group">
                  <span class="input-group-addon hidden-xs"><i class="fa fa-lock fa-lg" style="color:#948c8c" aria-hidden="true"></i></span>
                  <%= f.password_field :password_confirmation, class: 'form-control', :placeholder => 'Confirm Password', :required => '' %>
                </div>
              </div>

            <div class="form-group">
              <label for="user_skype" class="hidden-xs">Skype ID <small style="color: red">[required]</small></label>
                <div class="input-group">
                  <span class="input-group-addon hidden-xs"><i class="fa fa-skype" style="color:#948c8c" aria-hidden="true"></i></span>
                  <%= f.text_field :skype, class: 'form-control', :placeholder => 'Skype ID', :required => ''  %>
                </div>
              </div>

            <div class="form-group">
              <label for="user_skill" class="hidden-xs">Skills Level / Years of Teaching</label>
                <div class="input-group">
                  <select class="form-control" name="user[skill]" required>
                    <option value="Less than 1 year">Less than 1 year</option>
                    <option value="1 - 3 years">1 - 3 years</option>
                    <option value="3 - 5 years">3 - 5 years</option>
                    <option value="5 - 10 years">5 - 10 years</option>
                  </select>
              </div>
            </div>

            <div class="form-group">
              <label for="user_job" class="hidden-xs">Profession <small style="color: red">[required]</small></label>
                <div class="input-group">
                  <span class="input-group-addon hidden-xs"><i class="fa fa-briefcase" style="color:#948c8c" aria-hidden="true"></i></span>
                  <%= f.text_field :job, class: 'form-control', :placeholder => 'Profession', :required => ''  %>
                </div>
              </div>

            <div class="form-group">
                <label for="name" class="control-label hidden-xs">Describe Yourself Briefly <small style="color: red">[required]</small></label>
                  <div class="input-group">
                    <%= f.text_area(:appeal, rows: 5, class: "form-control", placeholder: "Description", :required => '') %>
                </div>
           </div>

            <div class="form-group">
              <label for="user_hobby" class="hidden-xs">Hobbies</label>
                <div class="input-group">
                  <span class="input-group-addon hidden-xs"><i class="fa fa-soccer-ball-o" style="color:#948c8c" aria-hidden="true"></i></span>
                  <%= f.text_field :hobby, class: 'form-control', :placeholder => 'Hobbies' %>
                </div>
              </div>

            <div class="form-group">
              <label for="user_skill" class="hidden-xs">Skills Level / Years of Teaching</label>
                <div class="input-group">
                  <select class="form-control" name="user[country]" required>
                    <option value="Filipino">Philippines</option>
                    <option value="Japanese">Japan</option>
                    <option value="American">USA</option>
                    <option value="Others">Others</option>
                  </select>
              </div>
            </div>

            <div class="form-group">
              <label for="user_movie" class="hidden-xs">Favorite Movie</label>
                <div class="input-group">
                  <span class="input-group-addon hidden-xs"><i class="fa fa-film" style="color:#948c8c" aria-hidden="true"></i></span>
                  <%= f.text_field :movie, class: 'form-control', :placeholder => 'Favorite Movie' %>
                </div>
              </div>

            <div class="form-group">
              <label for="photo1" class="hidden-xs">Picture</label>
                  <%= f.file_field :picture, class: 'form-control-file' %>
                  <%= f.file_field :picture2, class: 'form-control-file' %>
                  <%= f.file_field :picture3, class: 'form-control-file'  %>

                  <small id="fileHelp" class="form-text text-muted">Please add a profile picture</small>
              </div>

            <div class="form-group">
              <label for="user_youtube" class="hidden-xs">Youtube Video URL</label>
                <div class="input-group">
                  <span class="input-group-addon hidden-xs"><i class="fa fa-youtube" style="color:#948c8c" aria-hidden="true"></i></span>
                  <%= f.text_field :youtube_url, class: 'form-control', :placeholder => 'Youtube Video URL'  %>
                </div>
              </div>             

             <div class="form-group">
              <label for="user_username" class="hidden-xs">Gender <small style="color: red">[required]</small></label>
                  <select class="form-control" name="user[sex]" required>
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                  </select>
              </div>



<%= f.hidden_field :busy, :value => "busy" %>
<%= f.hidden_field :time, :value => 0 %>
<%= f.hidden_field :type_user, :value => "not-yet-teacher" %>

       <div class="form-group">   
            <%= f.submit "Register", class: "btn btn-primary btn-md", name: "new2" %>
            </div>
        </form>

    <% end %>
         </div>

      </div>
      </div>
    </div>
    