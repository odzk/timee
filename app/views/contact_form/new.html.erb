<div class="bg nopadding">
    <div class="container nopadding">
      <div class="row main">
        <div class="col-md-12">
        <div class="main-login main-center col-md-offset-3 col-md-6">
        <img src="timee-logo.jpg" class="img img-responsive" style="width: 100px; float: left;margin-top: 35px; margin-bottom: 10px; ">
        <h5 class="text-right hidden-xs">Contact Us</h5>

        <%= form_for(@contact_form, url: new_message_url) do |f| %>

         <div class="form-group">
              <label for="name" class="cols-md-2 control-label hidden-xs">Name</label>
              <div class="cols-md-10">
                <div class="input-group">
                  <span class="input-group-addon hidden-xs"><i class="fa fa-user fa" style="color:#948c8c" aria-hidden="true"></i></span>
                  <%= f.text_field :name, class: 'form-control', :placeholder => 'ニックネーム', :required => '' %>
                </div>
              </div>
         </div>
          <div class="form-group">
              <label for="name" class="cols-md-2 control-label hidden-xs">Email</label>
              <div class="cols-md-10">
                <div class="input-group">
                  <span class="input-group-addon hidden-xs"><i class="fa fa-envelope" style="color:#948c8c" aria-hidden="true"></i></span>
                  <%= f.text_field :email, class: 'form-control', :placeholder => 'メールアドレス', :required => '' %>
                </div>
              </div>
         </div>
          <div class="form-group">
              <label for="name" class="cols-md-2 control-label hidden-xs">Subject</label>
              <div class="cols-md-10">
                <div class="input-group">
                  <span class="input-group-addon hidden-xs"><i class="fa fa-suitcase fa" style="color:#948c8c" aria-hidden="true"></i></span>
                  <%= f.text_field :subject, class: 'form-control', :placeholder => '件名', :required => '' %>
                </div>
              </div>
         </div>
          <div class="form-group">
              <label for="name" class="cols-md-2 control-label hidden-xs">Message</label>
              <div class="cols-md-10">
                <div class="input-group">
                  <%= f.text_area(:message, rows: 5, class: "form-control", placeholder: "メッセージ") %>
                </div>
              </div>
         </div>
         <div class="form-group">
          <p>You can call us directly through our <a href="#"><strong><font color="green">Line</font></strong></a> account.</p><p>Scan the QR code:</p><br/>
          <img src="../../qrline.png" alt="image here" height="300" width="300" style="max-width: 100%">
         </div>
         <div class="form-group">
          <input type="submit" class="btn btn-primary btn-block btn-sm" value="送信">
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>