</style>

<div class="bg nopadding">
    <div class="container nopadding">
      <div class="row main">
        <div class="col-md-12">
        <div class="main-login main-center col-md-offset-3 col-md-6">
        <h2 class="text-center hidden-xs">新規会員登録</h2>
        <h3 class="text-center hidden-md hidden-sm hidden-lg">新規会員登録</h3>
        <%= form_for(@user) do |f| %>
            
            <div class="form-group">
              <label for="name" class="cols-md-2 control-label">ニックネーム</label>
              <div class="cols-md-10">
                <div class="input-group">
                  <span class="input-group-addon hidden-xs"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                   <%= f.text_field :name, class: 'form-control', :placeholder => 'ニックネーム' %>
                </div>
              </div>
            </div>

            <div class="form-group">
              <label for="email" class="cols-md-2 control-label">メールアドレス</label>
              <div class="cols-md-10">
                <div class="input-group">
                  <span class="input-group-addon hidden-xs"><i class="fa fa-envelope fa" aria-hidden="true"></i></span>
                  <%= f.email_field :email, class: 'form-control', :placeholder => 'メールアドレス' %>
                </div>
              </div>
            </div>

            <div class="form-group">
              <label for="username" class="cols-md-2 control-label">スカイプID</label>
              <div class="cols-md-10">
                <div class="input-group">
                  <span class="input-group-addon hidden-xs"><i class="fa fa-skype" aria-hidden="true"></i></span>
                  <%= f.text_field :skype, class: 'form-control', :placeholder => 'スカイプID' %>
                </div>
              </div>
            </div>

            <div class="form-group">
              <label for="password" class="cols-md-2 control-label">パスワード</label>
              <div class="cols-md-10">
                <div class="input-group">
                  <span class="input-group-addon hidden-xs"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
                   <%= f.password_field :password, class: 'form-control', :placeholder => 'パスワード' %>
                </div>
              </div>
            </div>

            <div class="form-group">
              <label for="confirm" class="cols-md-2 control-label">確認用パスワード</label>
              <div class="cols-md-10">
                <div class="input-group">
                  <span class="input-group-addon hidden-xs"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
                  <%= f.password_field :password_confirmation, class: 'form-control', :placeholder => '確認用パスワード' %>
                </div>
              </div>
            </div>

            <%= f.hidden_field :time, :value => 30 %>
            <%= f.hidden_field :type_user, :value => "student" %>

            <div class="form-group">
            <%= f.submit "登録する", class: "btn btn-primary btn-block btn-lg", name: "new", :value => "登録する" %>
            </div>
            
          </form>
        </div>

<!--         <div class="col-md-offset-1 col-md-6">

        <img src="main.jpg" class="img img-thumbnail" style="margin-top: 150px;">

        </div> -->
      </div>
      </div>
    </div>

</div>

<% end %>

  </div>
</div>